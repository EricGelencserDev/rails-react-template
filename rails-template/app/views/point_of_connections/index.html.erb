<p id="notice"><%= notice %></p>

<h1>Listing Point Of Connections</h1>

<table>
  <thead>
    <tr>
      <th>Poc type</th>
      <th>Mainline</th>
      <th>Poc used for</th>
      <th>Flow meter</th>
      <th>Master valve</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @point_of_connections.each do |point_of_connection| %>
      <tr>
        <td><%= point_of_connection.poc_type %></td>
        <td><%= point_of_connection.mainline_id %></td>
        <td><%= point_of_connection.poc_used_for %></td>
        <td><%= point_of_connection.flow_meter %></td>
        <td><%= point_of_connection.master_valve %></td>
        <td><%= link_to 'Show', point_of_connection %></td>
        <td><%= link_to 'Edit', edit_point_of_connection_path(point_of_connection) %></td>
        <td><%= link_to 'Destroy', point_of_connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

