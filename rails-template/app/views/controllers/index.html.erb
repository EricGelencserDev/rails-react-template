<p id="notice"><%= notice %></p>

<h1>Listing Controllers</h1>

<table>
  <thead>
    <tr>
      <th>Site</th>
      <th>Name</th>
      <th>Installed on</th>
      <th>Communications enabled</th>
      <th>Hub settings</th>
      <th>Ip address</th>
      <th>Communication type</th>
      <th>Communication address</th>
      <th>Controller type</th>
      <th>Share et from</th>
      <th>Share rain from</th>
      <th>Rain polling</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Notes</th>
      <th>Part number</th>
      <th>Serial number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @controllers.each do |controller| %>
      <tr>
        <td><%= controller.site_id %></td>
        <td><%= controller.name %></td>
        <td><%= controller.installed_on %></td>
        <td><%= controller.communications_enabled %></td>
        <td><%= controller.hub_settings %></td>
        <td><%= controller.ip_address %></td>
        <td><%= controller.communication_type %></td>
        <td><%= controller.communication_address %></td>
        <td><%= controller.controller_type %></td>
        <td><%= controller.share_et_from %></td>
        <td><%= controller.share_rain_from %></td>
        <td><%= controller.rain_polling %></td>
        <td><%= controller.latitude %></td>
        <td><%= controller.longitude %></td>
        <td><%= controller.notes %></td>
        <td><%= controller.part_number %></td>
        <td><%= controller.serial_number %></td>
        <td><%= link_to 'Show', controller %></td>
        <td><%= link_to 'Edit', edit_controller_path(controller) %></td>
        <td><%= link_to 'Destroy', controller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

